{
  "title": "Terra Dominus - Infra Overview",
  "uid": "terra-infra",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU util. (avg, non-idle)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "avg by (instance) (rate(node_cpu_seconds_total{mode!='idle'}[5m]))",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Mémoire utilisée",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Redis clients & cmds/s",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "clients {{instance}}"
        },
        {
          "expr": "rate(redis_commands_processed_total[1m])",
          "legendFormat": "cmd/s {{instance}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Postgres connexions actives",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{state='active'}",
          "legendFormat": "{{datname}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 (ms)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95"
        }
      ]
    }
  ],
  "templating": { "list": [] }
}